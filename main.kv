## -*- coding: cp1251 -*-
<CalcBtn@Button>:
    text: 'hello'

<Container>:

    resInp: input
    TextInput:

        size_hint: (1, 0.36)
        background_color: (.9, .9, .9, 1)
        id: input
        font_size: sp(40)
        readonly: True
    GridLayout:
        cols: 4
        rows: 6
        Button:
            id: oneBtn
            text: "1"
            on_press: root.pressed(self)
        Button:
            id: twoBtn
            text: "2"
            on_press: root.pressed(self)
        Button:
            id: threeBtn
            text: "3"
            on_press: root.pressed(self)
        Button:
            id: fourBtn
            text: "+"
            on_press: root.add_step(self)
        Button:
            text: "4"
            on_press: root.pressed(self)
        Button:
            text: "5"
            on_press: root.pressed(self)
        Button:
            text: "6"
            on_press: root.pressed(self)
        Button:
            text: "-"
            on_press: root.add_step(self)
        Button:
            text: "7"
            on_press: root.pressed(self)
        Button:
            text: "8"
            on_press: root.pressed(self)
        Button:
            text: "9"
            on_press: root.pressed(self)
        Button:
            text: "*"
            on_press: root.add_step(self)
        Button:
            text: "("
            on_press: root.pressed(self)
        Button:
            text: "0"
            on_press: root.pressed(self)
        Button:
            text: ")"
            on_press: root.pressed(self)
        Button:
            text: "/"
            on_press: root.add_step(self)
        Button:
            text: "sin"
            on_press: root.sin_pressed(self.text)
        Button:
            text: "."
            on_press: root.dot_pressed(self)
        Button:
            text: "rad"
            on_press: root.rad_pressed(self)
        Button:
            text: "%"
            on_press: root.add_step(self)
        Button:
            text: "cos"
            on_press: root.sin_pressed(self.text)
        Button:
            text: "pi"
            on_press: root.pressed(self)
        Button:
            text: "C"
            on_press: root.clear(self)
        Button:
            text: "="
            on_press: root.count(input.text)
